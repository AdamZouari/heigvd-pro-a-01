<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane prefHeight="270.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <children>
        <FlowPane layoutX="25.0" layoutY="15.0" orientation="VERTICAL" prefWidth="360.0" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <FlowPane hgap="10.0" prefWidth="360.0">
                    <children>
                        <Label text="Username">
                            <FlowPane.margin>
                                <Insets right="85.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="username" prefWidth="180">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </TextField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0" prefWidth="360.0">
                    <children>
                        <Label text="Password">
                            <FlowPane.margin>
                                <Insets right="90.0" />
                            </FlowPane.margin>
                        </Label>
                        <PasswordField fx:id="password" prefWidth="180">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </PasswordField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0" prefWidth="360.0">
                    <children>
                        <Label text="Confirm your password">
                            <FlowPane.margin>
                                <Insets right="15.0" />
                            </FlowPane.margin>
                        </Label>
                        <PasswordField fx:id="passwordConfirmed" prefWidth="180">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </PasswordField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0" prefWidth="360.0">
                    <children>
                        <Label text="Telegram username">
                            <FlowPane.margin>
                                <Insets right="35.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="telegramUsername" prefWidth="180">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </TextField>
                    </children>
                </FlowPane>
                <Button mnemonicParsing="false" onMouseClicked="#onRegisterClick" text="Register">
                    <FlowPane.margin>
                        <Insets left="270.0" />
                    </FlowPane.margin>
                </Button>
                <Label fx:id="error" maxWidth="330" text="error" textFill="RED" visible="false" wrapText="true" />
            </children>
            <padding>
                <Insets left="10.0" top="10.0" />
            </padding>
        </FlowPane>
    </children>
</AnchorPane>
