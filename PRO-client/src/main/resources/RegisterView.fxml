<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane maxHeight="290.0" prefWidth="360" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <children>
        <FlowPane layoutX="25.0" layoutY="15.0" orientation="VERTICAL" prefWidth="360.0" vgap="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <FlowPane hgap="10.0">
                    <children>
                        <Label minWidth="150.0" text="%username">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="username">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </TextField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0">
                    <children>
                        <Label minWidth="150.0" text="%password">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </Label>
                        <PasswordField fx:id="password">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </PasswordField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0">
                    <children>
                        <Label minWidth="150.0" text="%confirmation">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </Label>
                        <PasswordField fx:id="passwordConfirmed">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </PasswordField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0">
                    <children>
                        <Label minWidth="150.0" text="%telegramUsername">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="telegramUsername">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </TextField>
                    </children>
                </FlowPane>
                <Button mnemonicParsing="false" onMouseClicked="#onRegisterClick" text="%register">
                    <FlowPane.margin>
                        <Insets left="250.0" />
                    </FlowPane.margin>
                </Button>
                <Label fx:id="error" maxWidth="330" text="error" textFill="RED" visible="false" wrapText="true" />
            </children>
            <padding>
                <Insets left="30.0" top="20.0" />
            </padding>
        </FlowPane>
    </children>
</AnchorPane>
