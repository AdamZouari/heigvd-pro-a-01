   <children>
      <FlowPane minHeight="400.0" orientation="VERTICAL" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <FlowPane>
               <children>
                  <Label minWidth="170.0" text="%ruleMustAppear">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <FlowPane orientation="VERTICAL" prefHeight="50.0" vgap="10.0">
                     <children>
                        <CheckBox fx:id="menuCheckBox" mnemonicParsing="false" text="%inMenu" />
                        <CheckBox fx:id="telegramCheckBox" mnemonicParsing="false" text="%onTelegram" />
                     </children>
                  </FlowPane>
               </children>
               <FlowPane.margin>
                  <Insets bottom="10.0" />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane>
               <children>
                  <Label minWidth="160.0" text="%from">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="from">
                     <FlowPane.margin>
                        <Insets bottom="10.0" />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
            <FlowPane>
               <children>
                  <Label minWidth="160.0" text="%to">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="to">
                     <FlowPane.margin>
                        <Insets bottom="10.0" />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
            <FlowPane>
               <children>
                  <Label minWidth="160.0" text="%departureTime">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="departureTime" promptText="HH:MM">
                     <FlowPane.margin>
                        <Insets bottom="10.0" />
                     </FlowPane.margin>
                  </TextField>
               </children>
               <FlowPane.margin>
                  <Insets bottom="10.0" />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane>
               <children>
                  <Label minWidth="200.0" text="%timeOfRequest">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="requestTime" promptText="HH:MM">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin></TextField>
               </children>
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane layoutX="20.0" layoutY="218.0" minWidth="400.0">
               <children>
                  <Label text="%disruptionNotif">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <CheckBox fx:id="disruptionCheckBox" mnemonicParsing="false" />
               </children>
            </FlowPane>
            <Button mnemonicParsing="false" onMouseClicked="#onAddRuleClick" text="%addRule">
               <FlowPane.margin>
                  <Insets left="250.0" />
               </FlowPane.margin>
            </Button>
            <Label fx:id="error" maxWidth="370" text="error" textFill="RED" visible="false" wrapText="true" />
         </children>
         <padding>
            <Insets left="30.0" top="20.0" />
         </padding>
      </FlowPane>
   </children>
</AnchorPane>
