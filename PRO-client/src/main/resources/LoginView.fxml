<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <FlowPane layoutX="25.0" layoutY="15.0" orientation="VERTICAL" prefHeight="170" prefWidth="350" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <FlowPane hgap="10.0" prefWidth="350">
                    <children>
                        <Label fx:id="usernameLabel" text="%username" prefWidth="100">
                            <FlowPane.margin>
                                <Insets right="20.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="username" prefWidth="200">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </TextField>
                    </children>
                </FlowPane>
                <FlowPane hgap="10.0" prefWidth="350">
                    <children>
                        <Label text="%password" prefWidth="100">
                            <FlowPane.margin>
                                <Insets right="20.0" />
                            </FlowPane.margin>
                        </Label>
                        <PasswordField fx:id="password" prefWidth="200">
                            <FlowPane.margin>
                                <Insets bottom="10.0" />
                            </FlowPane.margin>
                        </PasswordField>
                    </children>
                </FlowPane>
                <Button mnemonicParsing="false" onMouseClicked="#onLoginButtonClick" text="%connexion">
                    <FlowPane.margin>
                        <Insets left="255.0" />
                    </FlowPane.margin>
                </Button>
                <FlowPane hgap="5.0" prefWidth="300">
                    <children>
                        <Label text="%needAccount" />
                        <Hyperlink fx:id="signUp" onMouseClicked="#onSignUpClick" text="%createAccount" />
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets left="10.0" top="10.0" />
            </padding>
        </FlowPane>
    </children>
</AnchorPane>
