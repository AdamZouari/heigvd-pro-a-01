<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TwitterServiceController">
   <children>
      <FlowPane layoutX="10.0" layoutY="10.0" minHeight="600.0" orientation="VERTICAL" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <FlowPane>
               <children>
                  <Label text="The rule must appear">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <FlowPane orientation="VERTICAL" prefHeight="50.0" vgap="10.0">
                     <children>
                        <CheckBox fx:id="menuCheckBox" mnemonicParsing="false" text="in the menu" />
                        <CheckBox fx:id="telegramCheckBox" mnemonicParsing="false" onMouseClicked="#onTelegramClick" text="on Telegram (notification)" />
                     </children>
                  </FlowPane>
               </children>
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane hgap="10.0">
               <children>
                  <Label text="Twitter Id" />
                  <TextField fx:id="twitterId">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
            <Button fx:id="addRuleButton" mnemonicParsing="false" onMouseClicked="#onAddRuleClick" text="Add rule">
               <FlowPane.margin>
                  <Insets left="170.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </FlowPane>
   </children>
</AnchorPane>
