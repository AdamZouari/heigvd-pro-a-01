<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane maxWidth="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WeatherServiceController">
   <children>
      <FlowPane maxWidth="700.0" minHeight="500.0" orientation="VERTICAL" prefWrapLength="550.0" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <FlowPane>
               <children>
                  <Label minWidth="170.0" text="%ruleMustAppear">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <FlowPane orientation="VERTICAL" prefHeight="50.0" vgap="10.0">
                     <children>
                        <CheckBox fx:id="menuCheckBox" mnemonicParsing="false" text="%inMenu" />
                        <CheckBox fx:id="telegramCheckBox" mnemonicParsing="false" onMouseClicked="#onTelegramClick" text="%onTelegram" />
                     </children>
                  </FlowPane>
               </children>
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane hgap="10.0">
               <children>
                  <Label minWidth="80.0" text="%location" />
                  <TextField fx:id="location">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin></TextField>
               </children>
            </FlowPane>
            <FlowPane hgap="10.0">
               <children>
                  <Label minWidth="150.0" text="%ifWeatherIs" />
                  <ChoiceBox fx:id="weatherTypeSelection" prefWidth="150.0">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin></ChoiceBox>
               </children>
               <FlowPane.margin>
                  <Insets top="20.0" />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane hgap="10.0" minWidth="500.0">
               <children>
                  <Label minWidth="150.0" text="%ifTempIs" />
                  <ChoiceBox fx:id="temperatureSelection" prefWidth="150.0" />
                  <Label text="%than" />
                  <TextField fx:id="temperature" maxWidth="50.0" />
                  <Label text="%celsius" />
               </children>
            </FlowPane>
            <FlowPane hgap="10.0" maxWidth="500.0">
               <children>
                  <Label minWidth="200.0" text="%timeOfRequest" />
                  <TextField fx:id="time" maxWidth="100.0" />
               </children>
               <FlowPane.margin>
                  <Insets top="20.0" />
               </FlowPane.margin>
            </FlowPane>
            <FlowPane hgap="10.0">
               <children>
                  <Label minWidth="100.0" text="%additionalNote" />
                  <CheckBox fx:id="addNoteCheckBox" mnemonicParsing="false" onMouseClicked="#onAdditionalNoteClick" />
               </children>
            </FlowPane>
            <TextArea fx:id="noteTextArea" editable="false" maxHeight="150.0" maxWidth="350.0" />
            <Button fx:id="addRuleButton" mnemonicParsing="false" onMouseClicked="#onAddRuleClick" text="%addRule">
               <FlowPane.margin>
                  <Insets left="250.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <padding>
            <Insets left="30.0" top="20.0" />
         </padding>
      </FlowPane>
   </children>
</AnchorPane>
